<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/_23_empNameEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이름 입력" />

        <EditText
            android:id="@+id/_23_empAgeEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="나이 입력" />

        <EditText
            android:id="@+id/_23_empMobileEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="전화번호 입력" />

        <Button
            android:id="@+id/_23_empInsertBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="사용자 입력" />

    </LinearLayout>

    <Button
        android:id="@+id/_23_empSelectBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="리스트 출력" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/_23_resultTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>

</LinearLayout>
